{
  "checkerConfigs": {
    "ContentPattern": {
      "severity": "WARNING",
      "patterns": [
        {
          "id": "DoNotSubmit",
          "message": "The change should not be submitted/merged.",
          "severity": "ERROR",
          "matches": {
            "changeTargets": ["+^main$"],
            "patterns": [
              "(?i)DO NOT (SUBMIT|COMMIT|PUSH|MERGE)"
            ],
            "context": [
              "cl:title",
              "cl:description",
              "file:line:any"
            ]
          }
        },
        {
          "id": "EmptyTitleOrDescription",
          "message": "You must add a title and description.",
          "severity": "ERROR",
          "matches": {
            "patterns": [
              "^\\s*$"
            ],
            "context": [
              "cl:title",
              "cl:description"
            ]
          }
        },
        {
          "id": "ConventionalCommit",
          "message": "Title must follow conventional commit syntax.",
          "severity": "WARNING",
          "matches": {
            "patterns": [".+"],
            "excludes": [
              "^(?P<type>build|chore|ci|docs|feat|fix|perf|refactor|revert|style|test|¯\\\\_\\(ツ\\)_/¯)(?P<scope>\\(\\w+\\))?(?P<breaking>!)?(?P<subject>:\\s.*)?|^(?P<merge>Merge \\w+)"
            ],
            "context": [
              "cl:title"
            ]
          }
        },
        {
          "id": "SpacesNotTabs",
          "message": "Use spaces to indent, not tabs.",
          "severity": "WARNING",
          "matches": {
            "patterns": [
              "^\\s*(?<hl>\\t+)\\s*[^\\s]"
            ],
            "context": [
              "file:line:any"
            ]
          }
        },
        {
          "id": "NoTrailingWhitespace",
          "message": "Trailing whitespace is not allowed.",
          "severity": "WARNING",
          "matches": {
            "patterns": [
              "\\s+$"
            ],
            "context": [
              "file:line:any"
            ]
          }
        },
        {
          "id": "LongLines100",
          "message": "Lines should be a maximum of at most 100 characters.",
          "severity": "WARNING",
          "matches": {
            "files": ["+\\.(kt|java)$"],
            "patterns": [
              "^.{100}(?<hl>.+)$"
            ],
            "excludes": [
              "^import ",
              "^package ",
              "LINT\\.ThenChange\\("
            ],
            "context": [
              "cl:title",
              "cl:description",
              "file:line:any"
            ]
          }
        },
        {
          "id": "GenderNeutral",
          "message": "Found a gendered pronoun.",
          "severity": "WARNING",
          "matches": {
            "patterns": [
              "(^|\\s|\\(|\\[)([Hh]e|[Hh]is|[Hh]ers?|[Hh]im|[Ss]he|[Gg]uys?)\\b"
            ],
            "context": [
              "cl:title",
              "cl:description",
              "file:line:added"
            ]
          }
        },
        {
          "id": "InclusiveLanguage",
          "message": "Found non-inclusive language. Add nocheck comment to ignore.",
          "severity": "WARNING",
          "matches": {
            "files": [
              "-/presubmitchecks\\.json$"
            ],
            "patterns": [
              "(?i)\\b((black|white)list|slave)\\b"
            ],
            "excludes": [
              "\\bnocheck\\b"
            ],
            "context": [
              "cl:title",
              "cl:description",
              "file:line:added"
            ]
          }
        }
      ]
    },
    "IfChangeThenChange": {
      "severity": "WARNING"
    },
    "KeepSorted": {
      "severity": "ERROR",
      "templates": {
        "gradle-dependencies": "block=yes case=no by_regex=(api|implementation|testImplementation)\"?\\([^)]\\) numeric=yes prefix_order=api,implementation,testImplementation,androidTestImplementation"
      }
    },
    "NewLine": {
      "severity": "ERROR"
    },
    "ValidJson": {
      "severity": "ERROR"
    }
  }
}
